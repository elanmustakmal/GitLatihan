<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/fragmentview"
    >


    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Buku"
            android:layout_marginTop="90dp"
            android:paddingLeft="20dp"
            />

        <TextView
            android:id="@+id/dialogjudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24sp"

            android:layout_marginBottom="15dp"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penulis"
            android:layout_margin="6dp"
            android:paddingLeft="20dp"
            />

        <TextView
            android:id="@+id/dialogketerangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="6dp"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penerbit"
            android:layout_margin="6dp"
            android:paddingLeft="20dp"
            />

        <TextView
            android:id="@+id/dialogpenerbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="6dp"            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tahun"
            android:layout_margin="6dp"
            android:paddingLeft="20dp"
            />

        <TextView
            android:id="@+id/dialogtahun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="6dp"            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harga"
            android:layout_margin="6dp"
            android:paddingLeft="20dp"
            />

        <TextView
            android:id="@+id/dialogharga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="6dp"            />

        <Button
            android:id="@+id/dialogedit"
            android:textAlignment="textStart"
            android:padding="20dp"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_baseline_edit_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/dialogdelete"
            android:textAlignment="textStart"
            android:padding="20dp"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_baseline_delete_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/dialogthumb"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_baseline_image_search_24"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>